{
  "git": {
    "commitMessage": "ci: release v${version}",
    "commitArgs": [
      "--no-verify"
    ],
    "pushArgs": [
      "--follow-tags",
      "--force"
    ],
    "pushRepo": "git@github.com:b12k/branch-name-lint.git"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  }
}
